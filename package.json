    "devDependencies": {
        "typescript": "^5.9.3",
        "tsx": "^4.20.6",
        "eslint": "^9.39.0",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.46.2",
        "eslint-config-prettier": "^10.1.8",
        "@types/node": "^24.10.0"
    }
}