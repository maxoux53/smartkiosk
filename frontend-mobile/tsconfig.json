{
    "extends": [
        "../../tsconfig.base.json",
        "expo/tsconfig.base"
    ],
    "compilerOptions": {
        "jsx": "react-native", // Spécifique à RN, pour Metro bundler
        "allowJs": true,
        "target": "es2015", // ES2015 pour compat RN
        "module": "esnext",
        "lib": ["es2015", "dom"], // Libs pour RN
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true // Compat avec modules RN
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "references": [
        { "path": "../../shared" }
    ]
}